{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Cout</th>
                <th>Periodicite</th>
                <th>Quartier</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Disponible</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Date</th>
                <th>Vente</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nom }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.cout }}</td>
                <td>{{ article.periodicite }}</td>
                <td>{{ article.quartier }}</td>
                <td>{{ article.ville }}</td>
                <td>{{ article.pays }}</td>
                <td>{{ article.disponible ? 'Yes' : 'No' }}</td>
                <td>{{ article.latitude }}</td>
                <td>{{ article.longitude }}</td>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.vente ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
