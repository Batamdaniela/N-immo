{% extends 'base.html.twig' %}

{% block title %}Recherche index{% endblock %}

{% block body %}
    <h1>Recherche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mot_cle</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recherche in recherches %}
            <tr>
                <td>{{ recherche.id }}</td>
                <td>{{ recherche.motCle }}</td>
                <td>{{ recherche.date ? recherche.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('recherche_show', {'id': recherche.id}) }}">show</a>
                    <a href="{{ path('recherche_edit', {'id': recherche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recherche_new') }}">Create new</a>
{% endblock %}
